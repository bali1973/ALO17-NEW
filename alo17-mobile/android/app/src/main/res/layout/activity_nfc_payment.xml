<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/white">

    <!-- NFC Icon -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_nfc"
        android:layout_marginBottom="32dp"
        android:contentDescription="NFC Icon" />

    <!-- Status Text -->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NFC kartınızı telefonun arkasına yaklaştırın"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-medium" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/blue" />

    <!-- Payment Amount -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ödeme Tutarı"
        android:textSize="14sp"
        android:textColor="@color/gray"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/amount_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="₺0.00"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-bold"
        android:layout_marginBottom="32dp" />

    <!-- Instructions -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Kartınızı telefonun arkasına yaklaştırın\n• Kart okunana kadar bekleyin\n• İşlem tamamlandığında bildirim alacaksınız"
        android:textSize="14sp"
        android:textColor="@color/gray"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:lineSpacingExtra="4dp" />

    <!-- Cancel Button -->
    <Button
        android:id="@+id/cancel_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="İptal Et"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/button_cancel"
        android:padding="16dp"
        android:layout_marginTop="auto" />

</LinearLayout> 