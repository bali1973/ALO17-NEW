# Production Environment Variables Example
# Copy this file to .env.production and fill in your actual values

NODE_ENV=production

# API Configuration
API_BASE_URL=https://alo17-api.com/api
API_TIMEOUT=10000

# PayTR Configuration
PAYTR_MERCHANT_ID=YOUR_PRODUCTION_MERCHANT_ID
PAYTR_MERCHANT_KEY=YOUR_PRODUCTION_MERCHANT_KEY
PAYTR_MERCHANT_SALT=YOUR_PRODUCTION_MERCHANT_SALT

# Firebase Configuration
FIREBASE_API_KEY=YOUR_PRODUCTION_FIREBASE_API_KEY
FIREBASE_AUTH_DOMAIN=alo17-app.firebaseapp.com
FIREBASE_PROJECT_ID=alo17-app
FIREBASE_STORAGE_BUCKET=alo17-app.appspot.com
FIREBASE_MESSAGING_SENDER_ID=YOUR_PRODUCTION_SENDER_ID
FIREBASE_APP_ID=YOUR_PRODUCTION_APP_ID
FIREBASE_MEASUREMENT_ID=YOUR_PRODUCTION_MEASUREMENT_ID
FCM_SERVER_KEY=YOUR_PRODUCTION_FCM_SERVER_KEY

# Socket.io Configuration
SOCKET_SERVER_URL=wss://alo17-api.com
SOCKET_SERVER_PORT=443

# Database Configuration
DATABASE_URL=YOUR_PRODUCTION_DATABASE_URL

# Redis Configuration
REDIS_URL=YOUR_PRODUCTION_REDIS_URL

# AWS Configuration (for file uploads)
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY
AWS_REGION=eu-central-1
AWS_S3_BUCKET=alo17-production

# JWT Configuration
JWT_SECRET=YOUR_PRODUCTION_JWT_SECRET
JWT_EXPIRES_IN=7d

# Email Configuration
SMTP_HOST=YOUR_SMTP_HOST
SMTP_PORT=587
SMTP_USER=YOUR_SMTP_USER
SMTP_PASS=YOUR_SMTP_PASS

# SMS Configuration
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN
TWILIO_PHONE_NUMBER=YOUR_TWILIO_PHONE_NUMBER

# Analytics Configuration
GOOGLE_ANALYTICS_ID=YOUR_GOOGLE_ANALYTICS_ID
MIXPANEL_TOKEN=YOUR_MIXPANEL_TOKEN

# Monitoring Configuration
SENTRY_DSN=YOUR_SENTRY_DSN
LOG_LEVEL=info

# Security Configuration
CORS_ORIGIN=https://alo17.com
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# CDN Configuration
CDN_URL=https://cdn.alo17.com
IMAGE_CDN_URL=https://images.alo17.com 